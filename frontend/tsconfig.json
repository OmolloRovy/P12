{
  "extends": "@vue/tsconfig/tsconfig.json",
  "include": ["types/*.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": [".built/**/*", "**/node_modules"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "outDir": "./.built",
    "allowJs": true
  },

  "references": [
    {
      "path": "./tsconfig.vite-config.json"
    }
  ]
}
